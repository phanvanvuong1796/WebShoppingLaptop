@model IEnumerable<WebsiteBanHang.Models.Entities.SubCategory>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý danh mục con</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <p>
        @Html.ActionLink("Thêm mới", "CreateSubCategory", "CategoryManager")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mahienthi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tendanhmuccon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soluong)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.mahienthi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tendanhmuccon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.soluong)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "EditSubCategory","CategoryManager", new { id = item.mahienthi }, null) |
                    @Html.ActionLink("Xóa", "DeleteSubCategory", "CategoryManager", new { id = item.mahienthi }, null)
                </td>
            </tr>
        }

    </table>
</div>

    
