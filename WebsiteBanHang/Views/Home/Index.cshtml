@model WebsiteBanHang.Models.IndexData
@using WebsiteBanHang.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Commit change
    List<List<Product>> featuredProducts = Model.featuredProducts;
    List<Product> lastestProducts = Model.lastestProducts;
    int i = 0;
}

<div class="span9">
    <div class="well well-small">
        <h4>Featured Products <small class="pull-right">200+ featured products</small></h4>
        <div class="row-fluid">
            <div id="featured" class="carousel slide">
                <div class="carousel-inner">
                    @foreach (var list in featuredProducts)
                    {
                        if (i == 0)
                        {
                            <div class="item active">
                                <ul class="thumbnails">
                                    @foreach (var items in list)
                                    {
                                        <li class="span3">
                                            <div class="thumbnail">
                                                <i class="tag"></i>
                                                <a href="product_details.html"><img src=@items.UriImage alt=""></a>
                                                <div class="caption">
                                                    <h5>@items.Name</h5>
                                                    <h4><a class="btn" href="product_details.html">XEM</a> <span class="pull-right">@items.Price</span></h4>
                                                </div>
                                            </div>
                                        </li>

                                    }

                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <ul class="thumbnails">
                                    @foreach (var items in list)
                                    {
                                        <li class="span3">
                                            <div class="thumbnail">
                                                <i class="tag"></i>
                                                <a href="product_details.html"><img src=@items.UriImage alt=""></a>
                                                <div class="caption">
                                                    <h5>@items.Name</h5>
                                                    <h4><a class="btn" href="product_details.html">VIEW</a> <span class="pull-right">@items.Price</span></h4>
                                                </div>
                                            </div>
                                        </li>
                                    }

                                </ul>
                            </div>
                        }
                        i++;
                    }
                    
                </div>
                <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
                <a class="right carousel-control" href="#featured" data-slide="next">›</a>
            </div>
        </div>
    </div>
    <h4>Latest Products </h4>
    <ul class="thumbnails">
        @foreach (var items in lastestProducts)
        {
            <li class="span3">
                <div class="thumbnail">
                    <a href="product_details.html"><img src=@items.UriImage alt="" /></a>
                    <div class="caption">
                        <h5>@items.Name</h5>
                        <p>
                            @items.Details
                        </p>

                        <h4 style="text-align:center"><a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Thêm vào <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">@items.Price</a></h4>
                    </div>
                </div>
            </li>
        }
        
    </ul>

</div>

